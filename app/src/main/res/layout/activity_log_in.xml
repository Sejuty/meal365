<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353535"
    tools:context=".log_in">


    <ImageView
        android:id="@+id/backdoodle2"
        android:layout_width="454dp"
        android:layout_height="304dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/doodle2" />

    <ImageView
        android:id="@+id/backdoodle"
        android:layout_width="395dp"
        android:layout_height="328dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/mainbox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063"
        app:srcCompat="@drawable/doodle2" />


    <TextView
        android:id="@+id/backtint"
        android:layout_width="443dp"
        android:layout_height="314dp"
        android:background="@drawable/shadebox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/boxShadow"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="272dp"
        android:layout_marginBottom="189dp"
        android:background="@drawable/loginboxshadow"
        android:shadowColor="#0E0E0E"
        android:soundEffectsEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.966" />

    <TextView
        android:id="@+id/mainbox"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="272dp"
        android:layout_marginBottom="189dp"
        android:background="@drawable/login"

        android:shadowColor="#0E0E0E"
        android:soundEffectsEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/emailLogin"
        android:layout_width="225dp"
        android:layout_height="42dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/appBlack"
        android:ems="10"
        android:fontFamily="@font/sulpher_point_light"
        android:hint="email"
        android:inputType="textPersonName"
        android:textAllCaps="false"
        android:textColor="@color/appBlack"
        android:textColorHighlight="#353535"
        android:textColorLink="@color/black"
        android:textCursorDrawable="@color/black"
        android:textSize="18sp"
        android:typeface="monospace"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/mainbox"
        app:layout_constraintTop_toTopOf="@+id/boxShadow" />

    <EditText
        android:id="@+id/password"
        android:layout_width="223dp"
        android:layout_height="40dp"
        android:layout_marginBottom="128dp"
        android:backgroundTint="@color/appBlack"
        android:ems="10"
        android:fontFamily="@font/sulpher_point_light"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="#3C3F41"
        app:layout_constraintBottom_toBottomOf="@+id/mainbox"
        app:layout_constraintEnd_toEndOf="@+id/mainbox"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="@+id/mainbox" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/sulpher_point_light"
        android:text="forgot password?"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/mainbox"
        app:layout_constraintStart_toStartOf="@+id/mainbox"
        app:layout_constraintTop_toTopOf="@+id/password"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/login"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:layout_marginBottom="168dp"
        android:backgroundTint="#353535"
        android:fontFamily="monospace"
        android:shadowColor="#D5000000"
        android:text="log in"
        android:textAllCaps="false"
        android:textColor="#FFEE32"
        app:cornerRadius="15dp"
        app:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signup"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginStart="284dp"
        android:layout_marginLeft="284dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#353535"
        android:fontFamily="monospace"
        android:shadowColor="#D5000000"
        android:text="sign up"
        android:textAllCaps="false"
        android:textColor="#FFEE32"
        app:cornerRadius="15dp"
        app:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>