<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".MealManagement">


    <androidx.cardview.widget.CardView
        android:id="@+id/member_cardView"
        android:layout_width="151dp"
        android:layout_height="138dp"
        android:layout_marginTop="88dp"
        app:cardBackgroundColor="#FBEB31"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sulpher_point_light"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/sulpher_point_light"
            android:text="members"
            android:textColor="@color/appBlack"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/member_plus"
        android:layout_width="77dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="25dp"
        android:text="+"
        android:textSize="20dp"
        app:backgroundTint="#D8101010"
        app:layout_constraintBottom_toTopOf="@+id/lunch"
        app:layout_constraintEnd_toStartOf="@+id/member_minus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_cardView" />

    <Button
        android:id="@+id/member_minus"
        android:layout_width="77dp"
        android:layout_height="45dp"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:text="-"
        android:textSize="20dp"
        app:backgroundTint="#D8101010"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_cardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dinner"
        android:layout_width="151dp"
        android:layout_height="138dp"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        app:cardBackgroundColor="#FBEB31"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/sulpher_point_light"
            android:text="dinner"
            android:textColor="@color/appBlack"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/lunch"
        android:layout_width="151dp"
        android:layout_height="138dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="296dp"
        app:cardBackgroundColor="#FBEB31"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toStartOf="@+id/dinner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/sulpher_point_light"
            android:text="lunch"
            android:textColor="@color/appBlack"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/meal_cardView"
        android:layout_width="151dp"
        android:layout_height="138dp"
        android:layout_marginTop="88dp"
        app:cardBackgroundColor="#FBEB31"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sulpher_point_light"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/sulpher_point_light"
            android:text="meal count"
            android:textColor="@color/appBlack"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/meal_plus"
        android:layout_width="77dp"
        android:layout_height="45dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="21dp"
        android:text="+"
        android:textSize="20dp"
        app:backgroundTint="#D8101010"
        app:layout_constraintBottom_toTopOf="@+id/dinner"
        app:layout_constraintEnd_toStartOf="@+id/meal_minus"
        app:layout_constraintStart_toEndOf="@+id/member_minus"
        app:layout_constraintTop_toBottomOf="@+id/meal_cardView" />

    <Button
        android:id="@+id/meal_minus"
        android:layout_width="77dp"
        android:layout_height="45dp"
        android:layout_marginStart="292dp"
        android:layout_marginLeft="292dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="-"
        android:textSize="20dp"
        app:backgroundTint="#D8101010"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_cardView" />


    <TextView
        android:id="@+id/depo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/sulpher_point_regular"
        android:text="Deposite"
        android:textColor="@color/appBlack"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/depo_count"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lunch" />

    <EditText
        android:id="@+id/depo_amount"
        android:layout_width="65dp"
        android:layout_height="32dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:background="#83232222"
        android:fontFamily="@font/sulpher_point_light"
        android:hint="amount"
        android:textColor="@color/appBlack"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/depo_amount_minus"
        app:layout_constraintStart_toEndOf="@+id/depo_amount_plus"
        app:layout_constraintTop_toBottomOf="@+id/depo_count" />

    <TextView
        android:id="@+id/depo_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:fontFamily="@font/sulpher_point_regular"
        android:text="0.00"
        android:textColor="@color/appBlack"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/depo_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/depo_amount"
        app:layout_constraintTop_toBottomOf="@+id/dinner" />

    <Button
        android:id="@+id/depo_amount_plus"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_marginStart="228dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="+"
        android:textSize="20dp"
        app:backgroundTint="#D8101010"
        app:layout_constraintEnd_toStartOf="@+id/depo_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinner" />

    <Button
        android:id="@+id/depo_amount_minus"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="-"
        android:textSize="20dp"
        app:backgroundTint="#D8101010"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/depo_amount"
        app:layout_constraintTop_toBottomOf="@+id/dinner" />


    <TextView
        android:id="@+id/spend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/sulpher_point_regular"
        android:text="spendings"
        android:textColor="@color/appBlack"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depo_text"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/spend_amount"
        android:layout_width="65dp"
        android:layout_height="32dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="#83232222"
        android:fontFamily="@font/sulpher_point_light"
        android:hint="amount"
        android:textColor="@color/appBlack"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spend_minus"
        app:layout_constraintStart_toEndOf="@+id/spend_plus"
        app:layout_constraintTop_toBottomOf="@+id/spend_count"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/spend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/sulpher_point_regular"
        android:text="0.00"
        android:textColor="@color/appBlack"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintStart_toEndOf="@+id/spend_text"
        app:layout_constraintTop_toBottomOf="@+id/depo_amount" />

    <Button
        android:id="@+id/spend_plus"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_marginStart="228dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="97dp"
        android:text="+"
        android:textSize="20dp"
        app:backgroundTint="#D8101010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depo_amount_plus"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/spend_minus"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="-"
        android:textSize="20dp"
        app:backgroundTint="#D8101010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depo_amount_minus"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>