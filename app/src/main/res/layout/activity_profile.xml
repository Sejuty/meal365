<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Profile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="405dp">
        <LinearLayout
            android:background="@drawable/gradient_background"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="70dp"
                android:layout_width="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="100dp"
                app:srcCompat="@color/appBlack"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sejuty"
                android:textColor="@color/appBlack"
                android:fontFamily="@font/sulpher_point_regular"
                android:textSize="25sp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nishat Tafannum"
                android:textColor="@color/appBlack"
                android:fontFamily="@font/sulpher_point_regular"
                android:textSize="20sp"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="275dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="20dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:layout_marginLeft="55dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="30sp"
                        android:textColor="@color/appBlack"
                        android:fontFamily="@font/sulpher_point_regular"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Previous meal count"
                        android:textSize="18sp"
                        android:textColor="@color/appBlack"
                        android:fontFamily="@font/sulpher_point_light"
                        android:textAlignment="center"
                        android:gravity="center_horizontal" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_marginLeft="45dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="30sp"
                        android:textColor="@color/appBlack"
                        android:fontFamily="@font/sulpher_point_regular"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Previous meal deposit"
                        android:textSize="18sp"
                        android:textColor="@color/appBlack"
                        android:fontFamily="@font/sulpher_point_light"
                        android:textAlignment="center"
                        android:gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="45dp">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sulpher_point_regular"
                android:paddingLeft="20dp"
                android:text="xxx@gmail.com"
                android:textColor="@color/appBlack"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sulpher_point_regular"
                android:paddingLeft="20dp"
                android:text="+266 225 225"
                android:textColor="@color/appBlack"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <Button

        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:background="@color/black"
        android:fontFamily="@font/sulpher_point_regular"
        android:shadowRadius="20"
        android:text="logout"
        android:textAllCaps="false"
        android:textColor="@color/red"
        app:backgroundTint="#FFFFFF" />
</androidx.appcompat.widget.LinearLayoutCompat>

